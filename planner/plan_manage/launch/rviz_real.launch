<launch>
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find ego_planner)/launch/run_in_real.rviz" required="true" />

  <!-- Visualization -->
  <node pkg="odom_visualization"
        name="odom_visualization_ukf"
        type="odom_visualization"
        output="screen">
    <remap from="~odom" to="/mavros/local_position/odom"/>
    <param name="color/a" value="0.8"/>
    <param name="color/r" value="1.0"/>
    <param name="color/g" value="0.0"/>
    <param name="color/b" value="0.0"/>
    <param name="covariance_scale" value="100.0"/>
  </node>
</launch>
